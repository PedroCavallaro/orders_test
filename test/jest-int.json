{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../",
  "testEnvironment": "node",
  "testRegex": ".int-spec.ts$",
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/src/$1",
    "^common/(.*)$": "<rootDir>/common/$1",
    "^test/(.*)$": "<rootDir>/test/$1"
  },
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  }
}
